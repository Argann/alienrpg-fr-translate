{"name":"Alien - Roll on selected Creature table","permission":{"default":0,"R6i5ieMxSwoLaW43":3},"type":"script","flags":{},"scope":"global","command":"(async () => {\r\n    let options = \"\";\r\n    game.tables.entities.forEach(t => {\r\n        if (t.folder.name === \"Alien Creature Tables\"){\r\n                options = options.concat(`<option value=\"${t.data._id}\">${t.data.name}</option>`)\r\n            };\r\n    });\r\n    let template = `\r\n                    <form>\r\n                        <div class=\"form-group\">\r\n                            <label>Select Table</label>\r\n                            <select id=\"tableSelect\">${options}</select>\r\n                        </div>\r\n                        <div class=\"form-group\">\r\n                            <label>How Many?</label>\r\n                            <input type=\"text\" id=\"inputNbr\" value=1>\r\n                        </div>\r\n                    </form>`\r\n\r\n    let buttons = {}\r\n    if (game.tables.entities.length > 0) {\r\n        buttons = {\r\n            draw: {\r\n                icon: '<i class=\"fas fa-check\"></i>',\r\n                label: \"Draw\",\r\n                callback: async (html) => {\r\n                    const tableId = html.find('#tableSelect')[0].value\r\n                    const table = game.tables.get(tableId);\r\n                    const drawNumber = html.find('#inputNbr')[0].value;\r\n                    for (let i = 0; i < drawNumber; i++) {\r\n                        await table.draw();\r\n                    };\r\n                }\r\n            },\r\n            cancel: {\r\n                icon: '<i class=\"fas fa-times\"></i>',\r\n                label: 'Cancel'\r\n            }\r\n        }\r\n    } else {\r\n        template = '<div style=\"text-align: center\">There are no tables to draw from!</div><br>'\r\n        buttons = {\r\n            draw: {\r\n                icon: '<i class=\"fas fa-check\"></i>',\r\n              